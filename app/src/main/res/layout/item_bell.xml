<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvStn_id"
        android:text="역명"
        android:textSize="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/tvCount"
        android:text="사람수"
        android:textSize="20dp"
        android:layout_width="0dp"
        android:textColor="@color/colorText"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tvStn_id"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <com.ornach.nobobutton.NoboButton
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:onClick="OnBtnClick"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toRightOf="@+id/tvCount"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:nb_backgroundColor="@color/colorAccentDark"
        app:nb_borderColor="@color/colorAccentDark"
        app:nb_borderWidth="5dp"
        app:nb_focusColor="@color/colorAccent"
        app:nb_iconPosition="right"
        app:nb_radius="10dp"

        app:nb_text="하차 완료"
        app:nb_textColor="#ffff" />
<!--        app:nb_drawableResource="@drawable/ic_done_32"-->
    <ImageView android:src="@drawable/shape_grayline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>